{
   "compilerOptions": {
      "module": "CommonJS",
      "target": "ES6",
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "noEmitOnError": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "baseUrl": ".",
      "rootDir": "./src",
      "noEmit": false,
      "outDir": "./build"
   },
   "exclude": [
      "build"
   ],
   "include": [
      "src/**/*"
   ]
}